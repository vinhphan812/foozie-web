extend ../layouts/common.pug

block head
     title Quy Định Giải Đấu
block content 
     #accordionExample.accordion
          .h2.text-center Một Số Quy Định Khi Tham Gia Giải
          each rule in rules
               .accordion-item
                    h2.accordion-header(id="heading-" + rule._id)
                         button.accordion-button(type='button' data-bs-toggle='collapse' data-bs-target='#collapse-' + rule._id aria-expanded='false' aria-controls='collapse-' + rule._id)
                              span= rule.name
                    .accordion-collapse.collapse(aria-labelledby='heading-' +rule._id data-bs-parent='#accordionExample' id="collapse-" + rule._id)
                         .accordion-body= rule.description