extend ../../layouts/common.pug

block content
      .row.justify-content-center
          form.col-md-12.col-xl-6(action="/admin/branches/create" method="POST" id="create").bg-white.p-5.shadow-sm
               if errors && errors.length
                    each val in errors
                         .alert.alert-danger.mx-5= val
               .h2.text-center Tạo Chi Nhánh
               .mb-3
                    label.form-label(for='name') Tên chi nhánh
                    input#name.form-control(type='text' name="name" placeholder="Tên chi nhánh")
               .mb-3
                    label.form-label(for='address') Địa chỉ chi nhánh
                    input#password.form-control(type='text' name="address" placeholder="Địa chỉ")
               .mb-3
                    label.form-label(for='phone') Số điện thoại
                    input#password.form-control(type='text' name="phone" placeholder="Số diện thoại")
               .mb-3
                    label.form-label(for='manager') Người quản lý
                    select.form-select(aria-label='select manager' name="manager")
                         option(selected='') Không
                         each val in managers
                              option(value=val.id)= val.last_name + " " + val.first_name
               .d-flex.justify-content-center
                    input.btn.btn-primary.px-5(type='submit' value="Tạo")