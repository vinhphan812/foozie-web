extend ../../layouts/common.pug

block content
     a.btn.btn-primary.my-2(href="/admin/menu/create") 
          i.bi.bi-plus.me-2
          span Tạo Món Ăn

     table.table
          thead
               tr
                    th(scope="col") #
                    //- th(scope="col") Hình ảnh
                    th(scope="col") Tên món
                    th(scope="col") Loại
                    th.d-none.d-md-table-cell(scope="col") Mô tả
                    th.d-none.d-sm-table-cell(scope="col") Đơn giá
                    th(scope="col") 
          tbody
               each val, index in foods
                    tr(branch-id=val.id)
                         td= index+1
                         //- td
                         //-      image(src="/public" + val.thumbnail width=200 alt=val.name)
                         td= val.name
                         td= val.type.name
                         td.d-none.d-md-table-cell= val.description
                         td= val.price.toLocaleString('vi-VN', {style : 'currency', currency : 'VND'})
                         td
                              a(href="/admin/menu/" + val.id + "/update") chỉnh sửa
                              button.btn.btn-link.delete.bi.bi-trash.text-danger